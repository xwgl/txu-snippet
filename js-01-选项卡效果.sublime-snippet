/*选项卡效果2*/
\$(function(){
	\$('${1:.ui.tab2 li}').hover(function(){
		\$('.tab-content2').hide();
		\$('.ui.gsys #'+$(this).attr('lang')).show();	
	\$('.ui.tab2 li').removeClass('active');
	\$(this).addClass('active');
})		   
})
